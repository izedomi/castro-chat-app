<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:background="@color/colorDark">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/drawer_header_bg"
            android:scaleType="fitXY"
            android:background="@color/colorWhite"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Obada Ufouma Rhoda"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/tv_staff_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STFICT103"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/tv_name"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Marshal"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_staff_id"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="obadaufuoma@gmail.com"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_title"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="female"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_email"/>


            <Button
                android:id="@+id/btn_send_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND FRIEND REQUEST"
                android:background="@color/colorRed"
                android:textColor="@color/colorWhite"
                android:padding="16sp"
                android:layout_below="@+id/tv_gender"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40sp"/>

            <Button
                android:id="@+id/btn_decline_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DECLINE FRIEND REQUEST"
                android:background="@color/colorRed"
                android:textColor="@color/colorWhite"
                android:padding="16sp"
                android:layout_below="@+id/btn_send_request"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>